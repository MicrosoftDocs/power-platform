          "type": "string"
        },
        "operationId": {
          "format": "uuid",
          "description": "Operation ID for the operation triggered on the instance package",
          "type": "string"
        }
      }
    },
    "InstancePackageOperationPollingResponse": {
      "type": "object",
      "properties": {
        "status": {
